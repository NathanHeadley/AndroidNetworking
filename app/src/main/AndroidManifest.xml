<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="zelphinstudios.courseworkapp" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".system.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".system.activities.LoginActivity"
            android:label="LoginActivity" >
        </activity>
        <activity
            android:name=".system.activities.HomeActivity"
            android:label="HomeActivity" >
        </activity>
        <activity
            android:name=".system.activities.GameActivity"
            android:screenOrientation="landscape"
            android:label="GameActivity" >
        </activity>
        <activity
            android:name=".system.activities.HighscoreActivity"
            android:label="HighscoreActivity" >
        </activity>
    </application>

</manifest>
